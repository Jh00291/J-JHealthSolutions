<Window x:Class="J_JHealthSolutions.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - J&amp;J Solutions" Height="350" Width="400">
    <Grid Background="#F0F0F0" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Company Name -->
        <TextBlock Text="J&amp;J Solutions"
                   FontSize="26"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,20"/>

        <!-- Login Form -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Username:"/>
            <TextBox x:Name="UsernameTextBox" Width="250" Margin="0,0,0,15"/>
            <Label Content="Password:"/>
            <PasswordBox x:Name="PasswordBox" Width="250" Margin="0,0,0,25"/>
            <Button Content="Login" Width="100" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>